<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#403f3f"
        android:orientation="horizontal"
        android:id="@+id/bohaodingbu"
        android:layout_weight="0.1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
        android:text="最近"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:id="@+id/zuijin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
        android:text="拨号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="#ffffff"
        android:id="@+id/bohao" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.4"
            android:background="@drawable/contact_logo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
    <View
        android:id="@+id/hengxian1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_weight="200"/>


        <RelativeLayout
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/zhongjian"
                android:maxLength="12"
                android:paddingTop="40dp"
                android:paddingRight="20dp"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="60sp"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <Button
                android:id="@+id/btn_del"
                android:onClick="btnDel"
                android:background="@drawable/delete"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dao5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zhongjian"
        android:layout_weight="0.5"
        >
        <Button
            android:id="@+id/btn01"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:text="1"
            android:onClick="btnOne"
            android:textSize="40sp"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn02"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:onClick="btnTwo"
            android:textSize="40sp"
            android:text="2"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn03"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:onClick="btnThree"
            android:textSize="40sp"
            android:text="3"
            android:textColor="#000000"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dao4"
        android:layout_below="@id/dao5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >
        <Button
            android:id="@+id/btn04"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:onClick="btnFour"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="4"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn05"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:onClick="btnFive"
            android:textSize="40sp"
            android:text="5"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn06"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:onClick="btnSix"
            android:text="6"
            android:textSize="40sp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dao3"
        android:layout_below="@id/dao4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >
        <Button
            android:id="@+id/btn07"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:textSize="40sp"
            android:layout_weight="1"
            android:onClick="btnSeven"
            android:text="7"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn08"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:textSize="40sp"
            android:layout_weight="1"
            android:onClick="btnEight"
            android:text="8"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn09"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:textSize="40sp"
            android:layout_weight="1"
            android:onClick="btnNine"
            android:text="9"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dao2"
        android:layout_below="@id/dao3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >
        <Button
            android:id="@+id/btn10"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:textSize="40sp"
            android:onClick="btnStar"
            android:text="*"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn11"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:textSize="40sp"
            android:layout_weight="1"
            android:onClick="btnZero"
            android:text="0"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btn12"
            android:textSize="40sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/buttonstyle"
            android:layout_weight="1"
            android:onClick="btnSharp"
            android:text="#"
            android:textColor="#000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/bohaojian"
            android:background="@drawable/phone_logo"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="btnDial"
            android:textColor="#000000"
            />

    </LinearLayout>

</LinearLayout>